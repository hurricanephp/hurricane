{
    "name": "hurricane/hurricane",
    "description": "Hurricane: Asynchronous PHP framework.",
    "type": "project",
    "keywords": ["hurricane","framework","Asynchronous","async"],
    "require": {
        "react/react": "^1.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^3.7",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\Hurricane\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sushil Kumar",
            "email": "sushilkumbhar77@gmail.com"
        }
    ],
    "scripts": {
        "pest": "vendor/bin/pest",
        "phpstan": "vendor/bin/phpstan analyse src tests",
        "rector": "vendor/bin/rector process --dry-run"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
